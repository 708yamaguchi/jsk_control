<launch>
  <arg name="POSE_REMAP" default="jsk_interactive_marker_manipulation/move_marker" />
  <arg name="MENU_REMAP" default="jsk_interactive_marker_manipulation/select_marker_menu" />
  <remap from="/joy" to="/joy_teleop" />
  <arg name="CONTROLLER_TYPE" default="auto" />
  <arg name="DEV" default="/dev/input/js2" />
  <node pkg="joy" type="joy_node" name="ps3_joy0" output="screen" >
    <param name="dev" type="string" value="$(arg DEV)" />
    <param name="deadzone" value="0.2" />
    <param name="autorepeat_rate" value="40" />
    <param name="coalesce_interval" value="0.025" />
  </node>
  <node pkg="jsk_teleop_joy" type="joy_main.py" name="joy" output="screen"
	clear_params="true">
    <remap from="/marker_menu" to="$(arg MENU_REMAP)" />
    <remap from="pose" to="$(arg POSE_REMAP)" />
    <param name="controller_type" value="$(arg CONTROLLER_TYPE)" />
    <param name="follow_view" value="true" />
    <param name="frame_id" value="/base_link" />
    <rosparam>
      plugins: ['JSKInteractiveMarkerEndeffector']
    </rosparam>
  </node>


</launch>
